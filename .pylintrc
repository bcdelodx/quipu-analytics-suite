[MASTER]
# Files or directories to ignore
ignore=CVS,.git,__pycache__,.pytest_cache,.venv,venv,env

# Use multiple processes to speed up Pylint
jobs=1

[MESSAGES CONTROL]
# Disable specific messages that are too strict for data science projects
disable=
    missing-module-docstring,
    too-few-public-methods,
    invalid-name,
    fixme,
    locally-disabled,
    suppressed-message

[REPORTS]
# Set the output format
output-format=text

# Only show messages, not full report
reports=no

[BASIC]
# Good variable names for data science
good-names=i,j,k,ex,Run,_,df,ax,fig,x,y,z,id,fs,px,np,pd,lr,rf,svm,knn,mae,mse,rmse

[FORMAT]
# Maximum number of characters on a single line
max-line-length=100

# String used as indentation unit
indent-string='    '

[DESIGN]
# Maximum number of arguments for function / method
max-args=7

# Maximum number of locals for function / method body
max-locals=20

# Maximum number of statements in function / method body
max-statements=60

# Maximum number of boolean expressions in an if statement
max-bool-expr=5

[VARIABLES]
# Regular expression matching dummy variables
dummy-variables-rgx=_+$|(_[a-zA-Z0-9_]*[a-zA-Z0-9]+?$)|dummy|^ignored_|^unused_

[EXCEPTIONS]
# Exceptions that will emit a warning when being caught
overgeneral-exceptions=builtins.Exception

[IMPORTS]
# Analyse import fallback blocks for Python 2/3 compatibility
analyse-fallback-blocks=no